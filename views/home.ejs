<h1>
    iFacebook <%= title %>
</h1>

<% if(locals.user) { %>
    <section id="feed-posts">
        <h3>Posts</h3>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="10" placeholder="Type here..."></textarea><br>
            <input type="submit" value="Post">
        </form>
    </section>
    <%} %>

        <div class="post-list-container">
            <h1>Posts</h1>

            <% for(post of posts) {%>
            <ul>
                <li>
                    <%-include('_post')-%>
                </li>
            </ul>
            <%-include('_comment')-%>

            <%} %>
        </div>